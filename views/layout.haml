!!!
%html
  %head
    %title= @title || SiteConfig.title
    %link{:href => '/main.css', :rel => 'stylesheet', :type => 'text/css'}
  %body
    #container
      #header
        #logo
          %h1
            %a{:href => '/'}= SiteConfig.title
        #menu
          - if session[:user]
            = "Welcome #{screen_name}"
            \|
            %a{:href=>'/home'} Home
            \|
            %a{:href=>'/friends'} Friends
            \|
            %a{:href=>'/followers'} Followers
            \|
            %a{:href=>"/#{screen_name}"} Your Chirps
            \|
            %a{:href=>'/logout'} Logout
          - else
            %a{:href=>'/connect'} Login with Twitter



      #content
        = yield
      #footer
        %p#legal= "&mdash; &copy; #{Time.now.strftime('%Y')} #{SiteConfig.author} &mdash;"
        - if session[:user] 
          /
            =session[:user].inspect
