!!!
%html
  %head
    %title= @title || SiteConfig.title
    %link{:href => '/main.css', :rel => 'stylesheet', :type => 'text/css'}
  %body
    #container
      #header
        #logo
          %h1
            %a{:href => '/'}= SiteConfig.title
        #menu
          - if session[:user]
            = "Welcome #{screen_name}"
            \|
            %a{:href=>'/home'} Home
            \|
            %a{:href=>"/#{screen_name}"} Chirps
            \|
            %a{:href=>'/logout'} Logout
          - else
            %a{:href=>'/connect'} Login with Twitter



      #content
        - if session[:user]
          #chirpbox
            %form{:action=>'/chirp', :method=>'POST'}
              %label{:for=>:message} What's on your mind?
              %br
              %textarea{:name=>:message, :id=>:message}
              %br
              %input{:type=>:submit, :value=>"Chirp!"}
        = yield
      #footer
        %p#legal= "&mdash; &copy; #{Time.now.strftime('%Y')} #{SiteConfig.author} &mdash;"
